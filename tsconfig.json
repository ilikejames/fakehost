{
    "compilerOptions": {
      "composite": false,
      "skipLibCheck": true,
      "strict": true,
      "target": "ES2019",
      "module": "ES6",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": false,
      "isolatedModules": true,
      "types": ["node"],
      "rootDir": ".",
      "baseUrl": ".",
    },
    "exclude": ["node_modules", "dist"],
  }