{
  "name": "@fakehost/workspace",
  "version": "0.0.0",
  "description": "Fake hosts",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/devtools/*",
    "packages/signalr/*",
    "packages/utils/*"
  ],
  "devDependencies": {
    "@types/node": "^18.0.0",
    "cross-env": "^7.0.3",
    "lerna": "^6.0.0",
    "prettier": "^2.3.2",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "build:libs": "lerna run --stream build",
    "build:app": "lerna run --stream build:app",
    "build": "yarn build:libs && yarn build:app",
    "lint": "lerna run --stream lint --",
    "test": "lerna run --stream test --",
    "e2e": "lerna run --stream e2e --",
    "start:fakes": "cross-env SIGNALR_PORT=5002 REST_PORT=5005 lerna run --stream start:fake --"
  },
  "resolutions": {
    "whatwg-url": "12.0.1"
  }
}
